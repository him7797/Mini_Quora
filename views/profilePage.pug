doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0')
        title Profile
        // CSS
        link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(rel='icon',type='image/png',sizes='16x16',href="/public/WEB LOGO.png")
        style.
            body {
                background-color: #E5E5E5;
            ;
            }
            .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .navbar {
                background-color: #FFFFFF !important;
                height: 50px;
            }
            nav a {
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 27px;
                color: #303030;
            }
            nav a:hover {
                text-decoration: none;
                color: inherit;
            }
            .links .active {
                color: #FF3B3B;
            }
            .links .active:hover {
                color: #FF3B3B;
            }
            .add_question {
                background: #FF3C3C;
                border-radius: 2px !important;
                font-family: Poppins;
                font-style: normal;
                font-size: 17px;
                line-height: 20px;
                text-transform: uppercase;
                text-align: center;
                color: #FFFFFF;
                float: right;
            }
            .add_question:hover {
                color: #FFFFFF;
                text-decoration: none;
            }
            .navbar-brand {
                font-family: Merriweather;
                font-style: normal;
                font-weight: bold;
                font-size: 24px;
                line-height: 30px;
                color: #FF3B3B !important;
                margin-right: 100px;
            }
            .searchbar {
                width: 550px;
                height: 33px;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
                margin-right: 100%;
            }
            .searchbar input {
                width: 550px;
                height: 33px;
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button {
                background: #FF3B3B;
                height: 33px;
                align-items: center;
                text-align: center !important;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button:hover {
                background: #FF3B3B;
            }
            .searchbar .form-control:focus {
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .searchbar i {
                color: #FFFFFF;
                align-items: center !important;
            }
            .material-icons {
                display: flex;
                line-height: 0.9px;
                text-align: center;
            }
            .links {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin: 0;
            }
            .navbar_elements {
                display: flex;
                justify-content: space-between;
            }

            .links {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin-right: 30px;
            }

            .links a {

                margin-right: 30px;
            }
            .container-fluid {
                margin-top: 30px;
            }
            .mainBody {
                width: 100%;
                height: 100%;
                margin-bottom: 100px;
            }
            .sidePanel {
                background-color: #E5E5E5;
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                display: flex;
                flex-direction: column;
                align-items: center;
                color: #303030;
            }
            .sidePanel ul li {
                list-style-type: none;
                margin-bottom: 20px;
            }
            .sidePanel img {
                margin-right: 10px;
            }

            .sidePanel a {
                text-decoration: none;
                color: #303030;
            }

            .sidePanel a:hover {
                text-decoration: none;
                color: #303030;
            }
            /* #user_question::-webkit-scrollbar {
            display: none;
            } */
            .profilePanel {
                margin-top: 20px;
                display: flex;
                flex-direction: column;
                height: 150px;
                background-color: #ffffff;
                margin-right: 0px;
                border-radius: 4px;
            }
            .profilename_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 20px;
                line-height: 30px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #303030;
            }
            .profilename_span a:hover {
                text-decoration: none;
                color: #303030;
            }
            .detail_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #4E4E4E;
            }
            .detail_span a:hover {
                text-decoration: none;
                color: #4E4E4E;
            }
            .logout_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #FF3B3B;
            }
            .logout_span a:hover {
                text-decoration: none;
                color: #FF3B3B;
            }
            .image_span {
                align-items: center;
                margin: auto;
                margin-top: -25px;
                margin-bottom: 10px;
            }
            .image_span img {
                height: 65px;
                width: 65px;
                border-radius: 50%;
            }
            .profile_card {
                height: 280px;
                width: 90%;
                margin: 0px 30px;
                background: url('/public/cover_photo.png');
            }
            .detail_card {
                height: 400px;
                width: 90%;
                margin: 0px 30px;
            }
            .details {
                display: flex;
                flex-direction: column;
            }
            .profile_image {
                position: absolute;
                bottom: 10%;
            }
            .profile_image img {
                height: 80px;
                width: 80px;
                border-radius: 50%;
            }
            .profile_details {
                position: absolute;
                display: flex;
                flex-direction: column;
                bottom: 15%;
                left: 12%;
            }
            .profile_name {
                font-family: Poppins;
                font-style: normal;
                font-weight: 600;
                font-size: 24px;
                line-height: 36px;
                /* identical to box height */
                color: #FFFFFF;
            }
            .profile_profession {
                font-family: Poppins;
                font-style: normal;
                font-weight: 300;
                font-size: 16px;
                line-height: 24px;
                /* identical to box height */
                color: #FEFEFE;
            }
            .heading_part {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                color: #4E4E4E;
                margin-bottom: 20px;
            }
            .maindetail {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                color: #303030;
            }
            .dashboard {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                color: #4E4E4E;
                text-transform: uppercase;
                margin-top: 30px;
                margin-bottom: 20px;
            }
            .dashboard_details {
                height: 200px;
                width: 60%;
                background: #FF6666;
                border-radius: 4px;
            }
            .span_number {
                font-family: Poppins;
                font-style: normal;
                font-weight: 600;
                font-size: 30px;
                line-height: 45px;
                /* identical to box height */
                color: #FFFFFF;
                text-align: center;
            }
            .span_tag {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                color: #FEFEFE;
                text-align: center;
            }
            .deets
            {
                display: flex;
                flex-direction: column;
            }
    body
        nav.navbar
            .row.navbar_elements
                .col-2
                    a.navbar-brand(href='#')
                        | Mini-Quora
                .col-4
                    .searchbar
                        .input-group
                            input.form-control(type='search' placeholder='Search any question running in your mind.....')
                            .input-group-append
                                button.btn.search_button(type='button')
                                    i.material-icons search
                .col-1
                .col-3.links
                    a.active(href='/api/users/') Home
                    a.active(href='/api/notifications/following') Following
                    a.active(href='/api/notifications/') Notifications
        .container-fluid
            .row.mainBody
                .col-2.sidePanel
                    ul
                        each val in cat
                            li
                                a(href='/api/category/by/' + val)
                                    img(src='/public/bullet.png')
                                    label=val
                .col-8.mainPanel
                    .row.profile_panel
                        .card.profile_card
                            .row.card-body
                                .col-2.profile_image
                                    img(src=`${userInfo.userPhoto}`)
                                .col-6.profile_details
                                    span.profile_name=`${userInfo.userName}`
                                    span.profile_profession=`${userInfo.userProfession}`
                    .row.detail_panel
                        .card.detail_card
                            .row.card-body.details
                                span.heading_part Other Personal Details
                                span.maindetail=`Email: ${userInfo.userEmail}`
                                span.maindetail=`Date of Birth: ${userInfo.userDob}`
                                span.dashboard Dashboard
                                .card.dashboard_details
                                    .row.card-body
                                        .col-6.deets
                                            if userInfo.totalQuestionsAnswered>0
                                                span.span_number=`${userInfo.totalQuestionsAnswered}`
                                            else
                                                span.span_number 0
                                            span.span_tag Questions Answered
                                        .col-6.deets
                                            if userInfo.totalPosts>0
                                                span.span_number=`${userInfo.totalPosts}`
                                            else
                                                span.span_number 0
                                            span.span_tag Questions Asked
                .col-2.profilePanel
                    span.image_span
                        img(src=`${currentUser.currentUserPhoto}`,class="user_image")
                    span.profilename_span
                        a(href="/api/users/" + currentUser.id)=currentUser.currentUser
                    span.detail_span
                        a(href="/api/users/editProfile/" + currentUser.id) Edit Details
                    span.logout_span
                        a(href='/api/users/logout') Logout
        // Scripts
        script(src='https://code.jquery.com/jquery-2.1.1.min.js')
        script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js' integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj' crossorigin='anonymous')
