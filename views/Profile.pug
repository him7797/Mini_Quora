doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0')
        title Profile
        // CSS
        link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(rel='icon',type='image/png',sizes='16x16',href="/public/WEB LOGO.png")
        style.
            body {
                background-color: #E5E5E5;
            ;
            }
            .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .navbar {
                background-color: #FFFFFF !important;
                height: 50px;
            }
            nav a {
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 27px;
                color: #303030;
            }
            nav a:hover {
                text-decoration: none;
                color: inherit;
            }
            .links .active {
                color: #FF3B3B;
            }
            .links .active:hover {
                color: #FF3B3B;
            }
            .add_question {
                background: #FF3C3C;
                border-radius: 2px !important;
                font-family: Poppins;
                font-style: normal;
                font-size: 17px;
                line-height: 20px;
                text-transform: uppercase;
                text-align: center;
                color: #FFFFFF;
                float: right;
            }
            .add_question:hover {
                color: #FFFFFF;
                text-decoration: none;
            }
            .navbar-brand {
                font-family: Merriweather;
                font-style: normal;
                font-weight: bold;
                font-size: 24px;
                line-height: 30px;
                color: #FF3B3B !important;
                margin-right: 100px;
            }
            .searchbar {
                width: 550px;
                height: 33px;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
                margin-right: 100%;
            }
            .searchbar input {
                width: 550px;
                height: 33px;
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button {
                background: #FF3B3B;
                height: 33px;
                align-items: center;
                text-align: center !important;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button:hover {
                background: #FF3B3B;
            }
            .searchbar .form-control:focus {
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .searchbar i {
                color: #FFFFFF;
                align-items: center !important;
            }
            .material-icons {
                display: flex;
                line-height: 0.9px;
                text-align: center;
            }

            .links {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin-right: 30px;
            }

            .links a {
                margin-right: 30px;
            }
            .navbar_elements {
                display: flex;
                justify-content: space-between;
            }
            .container-fluid {
                margin-top: 30px;

            }
            .mainBody {
                width: 100%;
                height: 100%;
                margin-bottom: 100px;

            }
            .mainPanel {
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                border-radius: 4px;
                display: flex;
                flex-direction: column;
            }
            .mainPanel span {
                margin: auto;

            }
            .edit_span {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                text-align: center;
                color: #0043EE;
                text-decoration: none;
                padding: 10px;
            }
            .edit_span a {
                text-decoration: none;
                color: #0043EE;
            }
            .edit_span a:hover {
                text-decoration: none;
                color: #0043EE;
            }
            .form-group a {
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                text-decoration: none;
                color: #0043EE;
            }
            .form-group a:hover {
                text-decoration: none;
                color: #0043EE;
            }
            .save_now {
                background: #0043EE;
                border-radius: 24px !important;
                font-family: Poppins;
                font-style: normal;
                font-size: 18px;
                line-height: 27px;
                color: #FFFFFF;
                width: 161px;
                height: 43px;
            }
            .save_now:hover {
                color: #FFFFFF;
                text-decoration: none;
            }
            .avatar {
                width: 100px;
                height: 100px;
                border-radius: 50%;
            }
    body
        nav.navbar
            .row.navbar_elements
                .col-2
                    a.navbar-brand(href='#')
                        | Mini-Quora
                .col-4
                    .searchbar
                        .input-group
                            input.form-control(type='search' placeholder='Search any question running in your mind.....')
                            .input-group-append
                                button.btn.search_button(type='button')
                                    i.material-icons search
                .col-1
                .col-3.links
                    a.active(href='/api/users/') Home
                    a(href='') Following
                    a(href='') Notifications

        .container-fluid
            .row.mainBody
                .col-3.sidePanel
                .col-6.mainPanel
                    br
                    span.image_span
                        img(src=`${userInfo.userPhoto}`,alt='Avatar',class="avatar")
                    span.edit_span(data-toggle='modal' data-target='#exampleModal')
                        | Edit Profile
                        | Picture
                    #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                        .modal-dialog.modal-dialog-centered
                            .modal-content
                                .modal-header
                                    h5#exampleModalLabel.modal-title Select New Profile Picture
                                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                                        span(aria-hidden='true') Ã—
                                .modal-body
                                    form(method='POST', enctype='multipart/form-data',action='/api/users/change/ProfilePic')
                                        input(type='file', name='photo')
                                        button.btn.btn-primary(type='submit') Save changes
                                .modal-footer
                                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close


                    .row
                        .col-2
                        .col-8
                            form(method='POST', action='/api/users/change-password-email')
                                div.form-group
                                    label Name
                                    input.form-control(name='name',type='text',placeholder=`${userInfo.userName}`)
                                div.form-group
                                    label Email address
                                    input.form-control(name='email',type='email' aria-describedby='emailHelp',placeholder=`${userInfo.userEmail}`)
                                div.form-group
                                    label Date of Birth
                                    br
                                    input.form-control(type='text' name='dob',placeholder=`${userInfo.userDob}`)
                                div.form-group
                                    label Profession
                                    input.form-control(name='profession',type='text',placeholder=`${userInfo.userProfession}`)
                                div.form-group
                                    label Old Password
                                    input.form-control(name='oldPas',type='password')
                                div.form-group
                                    label New Password
                                    input.form-control(name='newPas',type='password')

                                button.btn.save_now(type='submit') SAVE NOW
                        .col-2
                .col-3.profilePanel
        // Scripts
        script(src='https://code.jquery.com/jquery-2.1.1.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
        script(type='text/javascript')
        script(src = 'https://code.jquery.com/jquery-3.5.1.slim.min.js' integrity = 'sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj' crossorigin = 'anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx' crossorigin='anonymous')
        script(type='text/javascript').
            $('#myModal').on('shown.bs.modal', function(){
            $('#myInput').trigger('focus')
            })
