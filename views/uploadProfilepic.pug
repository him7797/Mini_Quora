doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0')
        title HomePage
        // CSS
        link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(rel='icon',type='image/png',sizes='16x16',href="/public/WEB LOGO.png")
        style.
            body {
                background-color: #E5E5E5;
            ;
            }
            .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .navbar {
                background-color: #FFFFFF !important;
                height: 50px;
            }
            nav a {
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 27px;
                color: #303030;
            }
            nav a:hover {
                text-decoration: none;
                color: inherit;
            }
            .links .active {
                color: #FF3B3B;
            }
            .links .active:hover {
                color: #FF3B3B;
            }
            .add_question {
                background: #FF3C3C;
                border-radius: 2px !important;
                font-family: Poppins;
                font-style: normal;
                font-size: 17px;
                line-height: 20px;
                text-transform: uppercase;
                text-align: center;
                color: #FFFFFF;
                float: right;
            }
            .add_question:hover {
                color: #FFFFFF;
                text-decoration: none;
            }
            .navbar-brand {
                font-family: Merriweather;
                font-style: normal;
                font-weight: bold;
                font-size: 24px;
                line-height: 30px;
                color: #FF3B3B !important;
                margin-right: 100px;
            }
            .searchbar {
                width: 550px;
                height: 33px;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
                margin-right: 100%;
            }
            .searchbar input {
                width: 550px;
                height: 33px;
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button {
                background: #FF3B3B;
                height: 33px;
                align-items: center;
                text-align: center !important;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px ;
            }
            .search_button:hover {
                background: #FF3B3B;
            }
            .searchbar .form-control:focus {
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .searchbar i {
                color: #FFFFFF;
                align-items: center !important;
            }
            .material-icons {
                display: flex;
                line-height: 0.9px;
                text-align: center;
            }
            .links {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin: 0;
            }
            .navbar_elements {
                display: flex;
                justify-content: space-between;
            }
            .container-fluid {
                margin-top: 30px;
            }
            .mainBody {
                width: 100%;
                height: 100%;
            }

        body
            nav.navbar
                .row.navbar_elements
                    .col-2
                        a.navbar-brand(href='#')
                            | Mini-Quora
                    .col-4
                        .searchbar
                            .input-group
                                input.form-control(type='search' placeholder='Search any question running in your mind.....')
                                .input-group-append
                                    button.btn.search_button(type='button')
                                        i.material-icons search
                    .col-1
                    .col-3.links
                        a.active(href='/api/users') Home
                        a(href='/api/category/following') Following
                        a(href='/api/notifications') Notifications
                    .col-2
                        a(href='/api/users')
                            button.btn.add_question(type='button') ADD QUESTIONS
                    .col-8.mainPanel
                        .row.question_panel
                            .card.question_card
                                .row.card-body
                                    form(method='POST', enctype='multipart/form-data',action='/api/users/change/ProfilePic')
                                        input(type='file', name='photo')
                                        input(type='submit', name='photo', value='Upload Image')
