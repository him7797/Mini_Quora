doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0')
        title HomePage
        // CSS
        link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(rel='icon',type='image/png',sizes='16x16',href="/public/WEB LOGO.png")
        style.
            body {
                background-color: #E5E5E5;
            ;
            }

            .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .navbar {
                background-color: #FFFFFF !important;
                height: 50px;
            }
            nav a {
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 27px;
                color: #303030;
            }
            nav a:hover {
                text-decoration: none;
                color: inherit;
            }
            .links .active {
                color: #FF3B3B;
            }
            .links .active:hover {
                color: #FF3B3B;
            }
            .add_question {
                background: #FF3C3C;
                border-radius: 2px !important;
                font-family: Poppins;
                font-style: normal;
                font-size: 17px;
                line-height: 20px;
                text-transform: uppercase;
                text-align: center;
                color: #FFFFFF;
                float: right;
            }
            .add_question:hover {
                color: #FFFFFF;
                text-decoration: none;
            }
            .navbar-brand {
                font-family: Merriweather;
                font-style: normal;
                font-weight: bold;
                font-size: 24px;
                line-height: 30px;
                color: #FF3B3B !important;
                margin-right: 100px;
            }
            .searchbar {
                width: 550px;
                height: 33px;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
                margin-right: 100%;
            }
            .searchbar input {
                width: 550px;
                height: 33px;
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button {
                background: #FF3B3B;
                height: 33px;
                align-items: center;
                text-align: center !important;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button:hover {
                background: #FF3B3B;
            }
            .searchbar .form-control:focus {
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .searchbar i {
                color: #FFFFFF;
                align-items: center !important;
            }
            .material-icons {
                display: flex;
                line-height: 0.9px;
                text-align: center;
            }
            .links {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin-right: 30px;
            }

            .links a {

                margin-right: 30px;
            }
            .navbar_elements {
                display: flex;
                justify-content: space-between;
            }
            .container-fluid {
                margin-top: 30px;
            }
            .mainBody {
                width: 100%;
                height: 100%;
                margin-bottom: 100px;
            }
            .profile_image {
                width: 64px;
                height: 64px;
                border-radius: 50%;
            }
            .sidePanel {
                background-color: #E5E5E5;
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                display: flex;
                flex-direction: column;
                align-items: center;
                color: #303030;
            }

            .sidePanel a {
                text-decoration: none;
                color: #303030;
            }

            .sidePanel a:hover {
                text-decoration: none;
                color: #303030;
            }
            .sidePanel ul li {
                list-style-type: none;
                margin-bottom: 20px;
            }
            .sidePanel img {
                margin-right: 10px;
            }
            .mainPanel {}
            /* #user_question::-webkit-scrollbar {
            display: none;
            } */
            .form-group textarea::-webkit-scrollbar {
                display: none;
            }
            .question_card {
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                border-radius: 4px;
                width: 100% !important;
                height: 270px;
                overflow: scroll;
            }
            .question_card::-webkit-scrollbar {
                display: none;
            }
            .profile_name {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 20px;
                line-height: 30px;
                color: #303030;
            }
            .profile_name .form-control {
                border-style: hidden;
            }
            .profile_name .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .post_button {
                position: absolute;
                width: 150px;
                height: 34px;
                background: rgba(0, 67, 238, 0.5);
                border-radius: 32px;
                font-family: Poppins;
                font-style: normal;
                font-size: 12px;
                line-height: 18px;
                letter-spacing: -0.165px;
                color: #FFFFFF;
                right: 0;
            }
            .post_button:hover {
                background: rgba(0, 67, 238, 0.5);
                color: #FFFFFF;

            }

            .post_answer {
                width: 100px;
                height: 34px;
                background: rgba(0, 67, 238, 0.5);
                border-radius: 32px;
                font-family: Poppins;
                font-style: normal;
                font-size: 12px;
                line-height: 18px;
                letter-spacing: -0.165px;
                color: #FFFFFF;
                margin-top: 20px;
            }

            .post_answer:hover {
                background: rgba(0, 67, 238, 0.5);
                color: #FFFFFF;

            }
            .post_answer{
                display: flex;
                flex-direction: column;
            }

            .profilePanel {
                margin-top: 20px;
                display: flex;
                flex-direction: column;
                height: 150px;
                background-color: #ffffff;
                margin-right: 0px;
                border-radius: 4px;
            }
            .profilename_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 20px;
                line-height: 30px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #303030;
            }
            .profilename_span a:hover {
                text-decoration: none;
                color: #303030;
            }
            .detail_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #4E4E4E;
            }
            .detail_span a:hover {
                text-decoration: none;
                color: #4E4E4E;
            }
            .logout_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #FF3B3B;
            }
            .logout_span a:hover {
                text-decoration: none;
                color: #FF3B3B;
            }
            .image_span {
                align-items: center;
                margin: auto;
                margin-top: -25px;
                margin-bottom: 10px;
            }
            .image_span img {
                height: 65px;
                width: 65px;
                border-radius: 50%;
            }
            .question_panel {
                width: 100%;
            }
            .answer_panel {
                width: 100%;
                padding-top: 40px;
                padding-bottom: 20px;
            }
            .answer_card {
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                border-radius: 4px;
                width: 100% !important;
                margin-bottom: 20px !important;
            }
            .answer_name {
                display: flex;
                flex-direction: column;
            }
            .asked_by {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                /* identical to box height */
                color: #303030;
            }
            .profession {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                color: #4E4E4E;
            }
            .date_of_submission {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                color: #3E3E3E;
            }
            .answer_image {
                height: 48px;
                width: 48px;
                border-radius: 50%;
            }
            .question_asked {
                padding: 20px 5px;
                overflow: scroll;
            }
            .question_asked::-webkit-scrollbar {
                display: none;
            }
            .question_headline {
                font-family: Poppins;
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 24px;
                color: #303030;
                flex: none;
                order: 0;
                align-self: flex-start;
                flex-grow: 0;
                margin: 0px 16px;
            }
            .question_detail {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                color: #303030;
                margin: 30px 16px;
                text-align: left;
            }
            pre {
                overflow: scroll;
            }
            pre::-webkit-scrollbar {
                display: none;
            }
            .tags_used span {
                background: #FFFFFF;
                border: 1px solid #FF3B3B;
                box-sizing: border-box;
                border-radius: 24px;
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                letter-spacing: -0.165px;
                color: #FF3B3B;
                margin-top: 10px;
                margin-left: 16px;
            }
            .upvote_details span   {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                /* identical to box height */
                letter-spacing: -0.165px;
                color: #303030;
                margin-left: 17px;
            }

            .upvote_details  a {
                text-decoration: none;
                color: #303030;
            }

            .upvote_details a:hover{
                text-decoration: none;
                color: #303030;
            }


            .upvote_buttons span {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                letter-spacing: -0.165px;
                color: #303030;
                margin-top: 10px;
                margin-left: 10px;
            }

            .upvote_buttons a {
                text-decoration: none;
                color: #303030;

            }

            .upvote_buttons a:hover {
                text-decoration: none;
                color: #303030;

            }
            .user_answer {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                color: #383838;
                margin-top: 20px;
                margin-left: 2px;
            }

            .user_answer textarea::-webkit-scrollbar {
                display: none;
            }
            .user_image
            {
                height: 24px;
                width: 24px;
                border-radius: 50%;
            }
    body
        nav.navbar
            .row.navbar_elements
                .col-2
                    a.navbar-brand(href='#')
                        | Mini-Quora
                .col-4
                    .searchbar
                        .input-group
                            input.form-control(type='search' placeholder='Search any question running in your mind.....')
                            .input-group-append
                                button.btn.search_button(type='button')
                                    i.material-icons search
                .col-1
                .col-3.links
                    a.active(href='/api/users/') Home
                    a.active(href='/api/notifications/following') Following
                    a.active(href='/api/notifications/') Notifications
        .container-fluid
            .row.mainBody
                .col-2.sidePanel
                    ul
                        each val in tags
                            li
                                a(href='/api/category/by/' + val)
                                    img(src='/public/bullet.png')
                                    label=val
                .col-8.mainPanel
                    .row.question_panel
                        .card.question_card
                            .row.card-body
                                .col-2.profile_image
                                    img(src="/api/users/image/"+`${userInfo.currentUserPhoto}`,alt='Avatar',class="profile_image")
                                .col-10.profile_name
                                    form(method='POST',action='/api/posts/')
                                      div.form-group
                                          label=`${userInfo.currentUser}`
                                          input.form-control(rows='3',name='title',type='text',placeholder='Ask any questions running in your mind')
                                      div.row.form-group
                                            .col-4
                                                input.form-control(type='text',name="tags", placeholder='Enter Tags')
                                            .col-4
                                                input.form-control(type='text',name="tags", placeholder='Enter Tags')
                                            .col-4
                                                input.form-control(type='text',name="tags", placeholder='Enter Tags')
                                      button.btn.post_button(type='submit') Post Question


                    .row.answer_panel
                       each val in posts
                         .card.answer_card
                            .card-body
                                .row.asking_user_details
                                    .col-1.answer_image
                                        img(src="/api/users/image/"+`${val.postByPhoto}`,class="profile_image")
                                        br
                                        br
                                    .col-9.answer_name
                                        a(href='/api/users/'+val.userId)
                                            span.asked_by=`${val.postBy}`
                                        span.profession=`${val.profession}`
                                    .col-2.date_of_submission=`${val.postDate}`+" "+`${val.postMonth}`+" "+`${val.postYear}`
                                .row.question_asked
                                    span.question_headline=`${val.title}`
                                .row.tags_used
                                    each item in val.tags
                                        span.badge=`${item}`
                                .row.upvote_details
                                    span= `${val.postLike}` + " Upvotes"
                                    a(href='/api/posts/'+val.id)
                                        span= `${val.totalAnswers}` + " Answers"
                                .row.upvote_buttons
                                    span
                                        a(href='/api/posts/like/' + val.id)
                                            img(src='/public/up-arrow.png')
                                            |  Upvote

                                    span
                                        img(src='/public/chat.png')
                                        |  Answer
                                hr
                                if val.answerPhoto
                                  .row.answer_user_details
                                      .col-1.answer_image
                                          img(src="/api/users/image/"+`${val.answerPhoto}`,class="profile_image")

                                      .col-9.answer_name
                                          a(href='/api/users/'+val.answerId)
                                              span.asked_by=`${val.answerName}`
                                          span.profession=`${val.answerProfession}`
                                      .col-2.date_of_submission=`${val.answerDate}`+" "+`${val.answerMonth}`+" "+`${val.answerYear}`
                                  pre.question_detail=`${val.description}`
                                  .row.upvote_details
                                      span= `${val.totalLikes}` + " Upvotes"
                                  .row.upvote_buttons
                                      span
                                          a(href='/api/answers/like/' + val.answerIds)
                                             img(src='/public/up-arrow.png')
                                             |  Upvote


                                  .row.user_answer
                                      span
                                          img.user_image(src="/api/users/image/"+`${userInfo.currentUserPhoto}`)
                                      .col-10
                                          form(method='POST',action='/api/answers/'+val.id)
                                           div.post_ans.form-group
                                               input.form-control(rows='3' ,name='description',placeholder='Write Answer as'+`${userInfo.currentUser}`,class="")
                                               button.btn.post_answer(type='submit') Post Answer
                                else
                                    .row.answer_user_details

                                    pre.question_detail=`${val.description}`
                                    .row.user_answer
                                        span
                                            img.user_image(src="/api/users/image/"+`${userInfo.currentUserPhoto}`)
                                        .col-10
                                            form(method='POST',action='/api/answers/'+val.id)
                                                div.post_ans.form-group
                                                    input.form-control(rows='3' ,name='description',placeholder='Write Answer as' + `${userInfo.currentUser}`,class="")
                                                    button.btn.post_answer(type='submit') Post Answer

                .col-2.profilePanel
                    span.image_span
                        img(src="/api/users/image/"+`${userInfo.currentUserPhoto}`,class="user_image")
                    span.profilename_span
                        a(href="/api/users/"+userInfo.id)=userInfo.currentUser
                    span.detail_span
                        a(href="/api/users/editProfile/"+userInfo.id) Edit Details
                    span.logout_span
                        a(href='/api/users/logout') Logout
