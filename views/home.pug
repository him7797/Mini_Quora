doctype html
html(lang='en')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0')
        title HomePage
        // CSS
        link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        style.
            body {
                background-color: #E5E5E5;
            ;
            }
            .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .navbar {
                background-color: #FFFFFF !important;
                height: 50px;
            }
            nav a {
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 18px;
                line-height: 27px;
                color: #303030;
            }
            nav a:hover {
                text-decoration: none;
                color: inherit;
            }
            .links .active {
                color: #FF3B3B;
            }
            .links .active:hover {
                color: #FF3B3B;
            }
            .add_question {
                background: #FF3C3C;
                border-radius: 2px !important;
                font-family: Poppins;
                font-style: normal;
                font-size: 17px;
                line-height: 20px;
                text-transform: uppercase;
                text-align: center;
                color: #FFFFFF;
                float: right;
            }
            .add_question:hover {
                color: #FFFFFF;
                text-decoration: none;
            }
            .navbar-brand {
                font-family: Merriweather;
                font-style: normal;
                font-weight: bold;
                font-size: 24px;
                line-height: 30px;
                color: #FF3B3B !important;
                margin-right: 100px;
            }
            .searchbar {
                width: 550px;
                height: 33px;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
                margin-right: 100%;
            }
            .searchbar input {
                width: 550px;
                height: 33px;
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px;
            }
            .search_button {
                background: #FF3B3B;
                height: 33px;
                align-items: center;
                text-align: center !important;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                box-shadow: 0px 0px ;
            }
            .search_button:hover {
                background: #FF3B3B;
            }
            .searchbar .form-control:focus {
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .searchbar i {
                color: #FFFFFF;
                align-items: center !important;
            }
            .material-icons {
                display: flex;
                line-height: 0.9px;
                text-align: center;
            }
            .links {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin: 0;
            }
            .navbar_elements {
                display: flex;
                justify-content: space-between;
            }
            .container-fluid {
                margin-top: 30px;
            }
            .mainBody {
                width: 100%;
                height: 100%;
            }
            .sidePanel {
                background-color: #E5E5E5;
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                display: flex;
                flex-direction: column;
                align-items: center;
                color: #303030;
            }
            .sidePanel ul li {
                list-style-type: none;
                margin-bottom: 20px;
            }
            .sidePanel img {
                margin-right: 10px;
            }
            .mainPanel {}
            .question_card {
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                border-radius: 4px;
                width: 100% !important;
                height: 300px;
                overflow: scroll;
            }
            .question_card::-webkit-scrollbar {
                display: none;
            }
            .profile_name {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 20px;
                line-height: 30px;
                color: #303030;
            }
            .profile_name .form-control {
                border-style: hidden;
            }
            .profile_name .form-control:focus {
                border-style: groove;
                border-color: #FF3B3B;
                box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
            }
            .post_button {
                position: absolute;
                width: 150px;
                height: 34px;
                background: rgba(0, 67, 238, 0.5);
                border-radius: 32px;
                font-family: Poppins;
                font-style: normal;
                font-size: 12px;
                line-height: 18px;
                letter-spacing: -0.165px;
                color: #FFFFFF;
                right: 0;
            }
            .post_button:hover {
                background: rgba(0, 67, 238, 0.5);
                color: #FFFFFF;
            }
            .image_buttons {
                display: flex;
                flex-direction: row;
                border: 1px;
            }
            .image_buttons span {
                margin-right: 30px;
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                /* identical to box height */
                letter-spacing: -0.165px;
                color: #303030;
                margin-left: 20px;
            }
            .profilePanel {
                margin-top: 20px;
                display: flex;
                flex-direction: column;
                height: 150px;
                background-color: #ffffff;
                margin-right: 0px;
                border-radius: 4px;
            }
            .profilename_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 20px;
                line-height: 30px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #303030;
            }
            .profilename_span a:hover {
                text-decoration: none;
                color: #303030;
            }
            .detail_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #4E4E4E;
            }
            .detail_span a:hover {
                text-decoration: none;
                color: #4E4E4E;
            }
            .logout_span a {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                display: flex;
                align-items: center;
                color: #FF3B3B;
            }
            .logout_span a:hover {
                text-decoration: none;
                color: #FF3B3B;
            }
            .image_span {
                align-items: center;
                margin: auto;
                margin-top: -25px;
                margin-bottom: 10px;
            }
            .image_span img {
                height: 65px;
                width: 65px;
            }
            .question_panel {
                width: 100%;
            }
            .answer_panel {
                width: 100%;
                padding-top: 40px;
            }
            .answer_card {
                background: #FFFFFF;
                border: 1px solid #EFEFEF;
                box-sizing: border-box;
                border-radius: 4px;
                width: 100% !important;
            }
            .answer_name {
                display: flex;
                flex-direction: column;
            }
            .asked_by {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                /* identical to box height */
                color: #303030;
            }
            .profession {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                color: #4E4E4E;
            }
            .date_of_submission {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                color: #3E3E3E;
            }
            .question_asked {
                padding: 20px 5px;
                overflow: scroll;
            }
            .question_asked::-webkit-scrollbar {
                display: none;
            }
            .question_headline {
                font-family: Poppins;
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 24px;
                color: #303030;
                flex: none;
                order: 0;
                align-self: flex-start;
                flex-grow: 0;
                margin: 0px 16px;
            }
            .question_detail {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                color: #303030;
                margin: 10px 16px;
                text-align: left;
            }
            pre {
                overflow: scroll;
            }
            pre::-webkit-scrollbar {
                display: none;
            }
            .tags_used span {
                background: #FFFFFF;
                border: 1px solid #FF3B3B;
                box-sizing: border-box;
                border-radius: 24px;
                font-family: Poppins;
                font-style: normal;
                font-weight: 500;
                font-size: 14px;
                line-height: 21px;
                /* identical to box height */
                letter-spacing: -0.165px;
                color: #FF3B3B;
                margin-top: 10px;
                margin-left: 16px;
            }
            .upvote_details span {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                /* identical to box height */
                letter-spacing: -0.165px;
                color: #303030;
                margin-top: 15px;
                margin-left: 17px;
            }
            .upvote_buttons span {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 16px;
                line-height: 24px;
                letter-spacing: -0.165px;
                color: #303030;
                margin-top: 10px;
                margin-left: 10px;
            }
            .user_answer {
                font-family: Poppins;
                font-style: normal;
                font-weight: normal;
                font-size: 12px;
                line-height: 18px;
                /* identical to box height */
                color: #383838;
                margin-top: 20px;
                margin-left: 2px;
            }
            .user_answer textarea {
                overflow: hidden;
            }
            .user_answer textarea::-webkit-scrollbar {
                display: none;
            }
            #exampleFormControlTextarea1 {
                display: block;
                overflow: hidden;
                resize: none;
            }
    body
        nav.navbar
            .row.navbar_elements
                .col-2
                    a.navbar-brand(href='#')
                        | Mini-Quora
                .col-4
                    .searchbar
                        .input-group
                            input.form-control(type='search' placeholder='Search any question running in your mind.....')
                            .input-group-append
                                button.btn.search_button(type='button')
                                    i.material-icons search
                .col-1
                .col-3.links
                    a.active(href='Homepage.html') Home
                    a(href='') Following
                    a(href='') Notifications
                .col-2
                    a(href='Login.html')
                        button.btn.add_question(type='button') ADD QUESTIONS
        .container-fluid
            .row.mainBody
                .col-2.sidePanel
                    ul
                        li
                            img(src='assets/bullet.png')
                            |  Education
                        li
                            img(src='assets/bullet.png')
                            |  Sports
                        li
                            img(src='assets/bullet.png')
                            |  Technology
                        li
                            img(src='assets/bullet.png')
                            |  Entertainment
                .col-8.mainPanel
                    .row.question_panel
                        .card.question_card
                            .row.card-body
                                .col-2.profile_image
                                    img(src='assets/profile.png')
                                .col-10.profile_name
                                    .form-group
                                        label(for='exampleFormControlTextarea1') Koshal Bothra
                                        textarea#exampleFormControlTextarea1.form-control(rows='3' placeholder='Ask any questions running in your mind')
                                    .form-group
                                        input#formGroupExampleInput2.form-control(type='text' placeholder='Enter tags to make your questions more reachable...')
                                    button.btn.post_button(type='button') POST QUESTIONS
                                .image_buttons
                                    span
                                        img(src='assets/photo.png')
                                        | Photos
                                    span
                                        img(src='assets/video.png')
                                        | Videos
                                    span
                                        img(src='assets/doc.png')
                                        | Documents
                    .row.answer_panel
                        .card.answer_card
                            .card-body
                                .row.user_details
                                    .col-1.answer_image
                                        img(src='assets/answer_photo.png')
                                    .col-9.answer_name
                                        span.asked_by Nitin Momaya
                                        span.profession UX Designer
                                    .col-2.date_of_submission
                                        | 9 Nov 2020
                                .row.question_asked
                                    span.question_headline
                                        | How to become an UI/UX Designer and get a job in India?
                                pre.question_detail.
                                    \nTo become anything one must have a learning attitude and desire to grow and get
                                    those constructive criticism which eventually triggers your ego! you need to prepare
                                    your mindset for things you want to learn and especially you are trying to build a
                                    career on the same thing! listing few points which will help you to start as a UI/UX
                                    Designer
                                    1. Get Familar to one of the tools i.e Figma, Adobe Xd and Sketch there are many
                                    more list are endless but i found FIgma much better among them Because it’s easy to
                                    learn and get adopted evrything has it’s consequences but Figma does most of thing
                                    you a UX designer does
                                    2. Learning UX Principles, Colour Theory ,Typography, Visual hierarchy, UX Methods
                                    is a must things. everything has it’s own Value and used in most of the cases. there
                                    is no order to learn them you can go whatever make you curious...
                                    3. Ability to understand product/Services is a must if you don’t invest time to
                                    learn about product for whom it is and who will used it? purpose of using it ? it
                                    will gonna be hard to design Layouts for any product...
                                    4. IN THE END PRATICE PRATICE PRATICE it’s a never ending process you must keep
                                    learning each and everyday. Product Designer are here to solve the problem and make
                                    the product useful. not make a beautiful art gallery. Design with Purpose.
                                .row.tags_used
                                    span.badge Technology
                                    span.badge Design
                                .row.upvote_details
                                    span 3 Upvotes
                                    span 3 Downvotes
                                    span 3 Answers
                                .row.upvote_buttons
                                    span
                                        img(src='./assets/up-arrow.png')
                                        |  Upvote
                                    span
                                        img(src='./assets/down-arrow.png')
                                        |  Downvote
                                    span
                                        img(src='./assets/chat.png')
                                        |  Answer
                                .row.user_answer
                                    span
                                        img(src='./assets/user_answer.png')
                                    .col-10
                                        .form-group
                                            textarea#exampleFormControlTextarea2.form-control(rows='1' placeholder='Write Answer as Koshal Bothra')
                .col-2.profilePanel
                    span.image_span
                        img(src='assets/profile_panel.png')
                    span.profilename_span
                        a(href='') Koshal Bothra
                    span.detail_span
                        a(href='') Edit Details
                    span.logout_span
                        a(href='') Logout
        // Scripts
        script(src='https://code.jquery.com/jquery-2.1.1.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
        script(type='text/javascript').
            textarea1 = document.querySelector("#exampleFormControlTextarea1");
            textarea1.addEventListener('input', autoResize, false);
            textarea2 = document.querySelector("#exampleFormControlTextarea2");
            textarea2.addEventListener('input', autoResize, false);
            function autoResize() {
                this.style.height = 'auto';
                this.style.height = this.scrollHeight + 'px';
            }
